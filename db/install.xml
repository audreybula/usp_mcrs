<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/usp_mcrs/db" VERSION="20190825" COMMENT="XMLDB file for Moodle blocks/usp_mcrs"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_usp_mcrs_courses" COMMENT="University courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_code" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_mode" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="faculty_id" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="school_id" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_usp_mcrs_requests" COMMENT="Store course requests">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="request_date" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_code" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>