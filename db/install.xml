<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/usp_mcrs/db" VERSION="20191015" COMMENT="XMLDB file for Moodle blocks/usp_mcrs"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_usp_mcrs_courses" COMMENT="University courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_code" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="faculty_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="school_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_usp_mcrs_requests" COMMENT="Store course requests">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="request_date" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_code" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_school" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_requester" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_lecturer" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_faculty" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_copyfrom" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="course_new" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_usp_mcrs_schools" COMMENT="Schools">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="school_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_usp_mcrs_faculty" COMMENT="Faculty">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="faculty_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_usp_mcrs_statuses" COMMENT="Stores the status of pending operations">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="coursesid"/>
        <FIELD NAME="coursesid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" COMMENT="mdl_course id" PREVIOUS="id" NEXT="status"/>
        <FIELD NAME="status" TYPE="char" LENGTH="8" NOTNULL="true" DEFAULT="BACKUP" SEQUENCE="false" ENUM="true" ENUMVALUES="'BACKUP', 'SUCCESS', 'FAIL'" COMMENT="status of operation" PREVIOUS="coursesid"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>